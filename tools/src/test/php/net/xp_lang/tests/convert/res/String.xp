package lang;


/**
 * A string
 *
 */
public class String {
  protected var $buffer= '';

  /**
   * Constructor
   *
   * @param   string initial
   */
  public __construct(string $initial= '') {
    $this.buffer= $initial;
  }

  /**
   * Returns the character at a given position
   *
   * @param   int i
   * @return  string
   */
  public string charAt(int $i) {
    return $this.buffer{$i};
  }
}
